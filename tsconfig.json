{
    "compilerOptions": {
        "target": "ES2015",
        "lib": [
            "ES2015",
            "es2020"
        ],
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "importHelpers": true,
        "declaration": true,
        "strict": true,
        "sourceMap": true,
        "inlineSources": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "types": [
            "node",
            "jest"
        ],
        "rootDir": "src"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/test.ts"
    ]
}